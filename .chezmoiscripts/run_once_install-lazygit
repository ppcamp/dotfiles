#!/bin/bash

# getting latest version
version=$(curl -s https://api.github.com/repos/jesseduffield/lazygit/releases/latest | jq -r .tag_name)

echo "ðŸš€ Installing lazygit $version"

curl -sLo - "https://github.com/jesseduffield/lazygit/releases/latest/download/lazygit_${version#v}_Linux_x86_64.tar.gz" |
  sudo tar -xzC /usr/local/bin
