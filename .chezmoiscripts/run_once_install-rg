#!/bin/bash

# getting latest version of fd
version=$(curl -s https://api.github.com/repos/BurntSushi/ripgrep/releases/latest | jq -r .tag_name)

echo "ðŸš€ Installing rg $version"

curl -sLo - https://github.com/BurntSushi/ripgrep/releases/download/$version/ripgrep-$version-x86_64-unknown-linux-musl.tar.gz |
  tar -xzC /tmp

sudo mv /tmp/ripgrep-$version-x86_64-unknown-linux-musl/rg /usr/local/bin

rm -rfd /tmp/ripgrep-$version-x86_64-unknown-linux-musl
