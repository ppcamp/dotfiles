{{- if has "duckdb" .scripts -}}
#!/usr/bin/env bash
# vim: ts=2 sts=2 sw=2 et

# This script installs duckdb CLI tool. DuckDB is an in-process SQL OLAP
# database management system.

pkgCreator=duckdb
pkg=duckdb
tmp=$(mktemp -d)

# openning tmp folder
cd $tmp

# getting latest version
version=$(curl -s https://api.github.com/repos/$pkgCreator/$pkg/releases/latest | jq -r .tag_name)

echo "ðŸš€ Installing $pkg $version"

# downloading package
curl -sLo - "https://github.com/$pkgCreator/$pkg/releases/latest/download/${pkg}_cli-linux-amd64.zip" |
  bsdtar -xjC .

# installing it
install -m 755 $pkg {{ .installDirs.home }}

# rm {{ joinPath .installDirs.home "$pkg" }}

{{ end -}}
