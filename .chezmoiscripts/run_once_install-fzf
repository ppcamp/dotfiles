#!/bin/bash

# getting latest version
version=$(curl -s https://api.github.com/repos/junegunn/fzf/releases/latest | jq -r .tag_name)

echo "ðŸš€ Installing fzf $version"

curl -sLo - "https://github.com/junegunn/fzf/releases/latest/download/fzf-${version#v}-linux_amd64.tar.gz" |
  sudo tar -xzC /usr/local/bin
