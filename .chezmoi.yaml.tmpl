{{- end -}}


{{- /* Does the same for the email */ -}}
{{- $email := "p.augustocampos@gmail.com" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptString "Ó´Ω git email" $email -}}
